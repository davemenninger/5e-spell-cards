// Standard playing card decks are 2.5 inches by 3.5 inches (64mm X 89mm).
rect(x=1, y=1, width=178, height=250, fill="#FFF" stroke="#000", stroke-width="3", rx="21")

- var title_height = 24
- var ffamily="opensans"
- var ffamily_bold="opensans700"
- var spacer = 9
- var level_height = 42
- var first_column = 21
- var second_column = 51
- var third_column = 78
- var fourth_column = 105

+text(title)(align="center", font-family=ffamily_bold, font-size=15, x=90, y=24)
line(x1=first_column, y1=title_height+5, x2=178-first_column, y2=title_height+5, stroke="#C00", stroke-width="1")

if level=="Cantrip"
	- var level = "C"

+text("Level")(align="center", font-family=ffamily_bold, font-size=6, x=first_column+12, y=level_height)
+text(level)(align="center", font-family=ffamily_bold, font-size=18, x=first_column+12, y=level_height+20)
rect(x=first_column, y=level_height-9, width=24, height=36, fill="none" stroke="#CCC", stroke-width="1", rx="6")

// +text(school)(align="left", font-family="opensans", font-size=6, x=second_column, y=level_height)

+text("Casting Time")(align="left", font-family=ffamily_bold, font-size=5, x=second_column, y=level_height)
+textWrap(castingtime)(align="left", font-family="opensans", font-size=5, x=second_column, y=level_height+spacer, width=42)

+text("Range")(align="left", font-family=ffamily_bold, font-size=5, x=fourth_column, y=level_height)
+textWrap(range)(align="left", font-family="opensans", font-size=5, x=fourth_column, y=level_height+spacer, width=60)

+text("Duration")(align="left", font-family=ffamily_bold, font-size=5, x=second_column, y=level_height+(spacer*2))
+textWrap(duration)(align="left", font-family="opensans", font-size=5, x=second_column, y=level_height+(spacer*3), width=75)


if body.length > 875
	+text(body.length)(align="left", font-family="opensans", font-size=6, x=10, y=10, fill="#C00")
	+text("TOO LONG")(align="left", x=30, y=12, fill="#C00")

+textWrap(body)(align="left", font-family="opensans", font-size=6, x=first_column, y=level_height+(spacer*5), width=136)

+text(classes)(align="left", font-family=ffamily_bold, font-size=6, x=21, y=250-spacer)
