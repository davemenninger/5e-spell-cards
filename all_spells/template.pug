// Standard playing card decks are 2.5 inches by 3.5 inches (64mm X 89mm).
rect(x=1, y=1, width=178, height=250, fill="#FFF" stroke="#000", stroke-width="3", rx="21")

- var ffamily="opensans"
- var ffamily_bold="opensans700"

+text(title)(align="center", font-family=ffamily_bold, font-size=15, x=90, y=24)

- var spacer = 9
- var level_height = 42
- var first_column = 21
- var second_column = 60
- var third_column = 111


+text("Level")(align="left", font-family=ffamily_bold, font-size=6, x=first_column, y=level_height)
+text(level)(align="left", font-family=ffamily, font-size=6, x=first_column, y=level_height+spacer)
// +text(school)(align="left", font-family="opensans", font-size=6, x=second_column, y=level_height)

+text("Range")(align="left", font-family=ffamily_bold, font-size=6, x=second_column, y=level_height)
+textWrap(range)(align="left", font-family="opensans", font-size=6, x=second_column, y=level_height+spacer, width=48)

+text("Duration")(align="left", font-family=ffamily_bold, font-size=6, x=third_column, y=level_height)
+textWrap(duration)(align="left", font-family="opensans", font-size=6, x=third_column, y=level_height+spacer, width=42)



if body.length > 875
	+text(body.length)(align="left", font-family="opensans", font-size=6, x=10, y=10, fill="#C00")
	+text("TOO LONG")(align="left", x=30, y=12, fill="#C00")

+textWrap(body)(align="left", font-family="opensans", font-size=6, x=21, y=level_height+(spacer*4), width=136)

+text(classes)(align="left", font-family=ffamily_bold, font-size=6, x=21, y=250-spacer)
